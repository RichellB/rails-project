<%= form_for @song do |f| %>
  <%= f.label "Song title:" %>
  <%= f.text_field :title %><br/>

  <%= f.fields_for :genres do |sec_form| %>
    <%= sec_form.label :name %>
    <%= sec_form.text_field :name %><br/>

    <%= sec_form.label :album %>
    <%= sec_form.text_field :album %><br/>
  <% end %>

  <%= f.submit %>
<% end %>