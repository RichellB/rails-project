<%= form_for @song do |f| %>
  <%= f.label "Song Name:" %>
  <%= f.text_field :name %><br/>

  <%= f.fields_for :genres do |sec_form| %>
    <%= sec_form.label :name %>
    <%= sec_form.text_field :name %><br/>
  <% end %>

  <%= f.submit %>
<% end %>


<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>